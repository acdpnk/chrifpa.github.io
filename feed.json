---
---
{
	"version": "https://jsonfeed.org/version/1",
	"title": "{{ site.title }}",
	"home_page_url": "{{ site.url }}",
	"feed_url": "{{ site.url | append: page.url }}",
	"author": {
		"name": "{{ site.author }}",
		"url:" "https://twitter.com/acdpnk"
    },
	"items": [
        {% for post in site.posts limit: 20 %}
        {
			"id": "{{ post.id }}",
			"title": "{{ post.title | cdata_escape }}",
			"content_html": {{ post.content | jsonify }},
			"url": "{{ site.url | append: post.url }}",
			{% if post.excerpt %}"summary": "{{ post.excerpt | strip_html }}"{% endif %},
            {% if post.external_url %}
            	"external_url": "{{ post.external_url }}",
            {% endif %}
            {% if post.image %}
            	"image": "{{ post.image }}",
            {% endif %}
			"tags": [
				"{{ post.tags}}"
			],
			"date_published": "{{ post.date | date_to_xmlschema }}"
		}
		{% if forloop.last == false %},{% else %}{% endif %}
		{% endfor %}
    ]
}